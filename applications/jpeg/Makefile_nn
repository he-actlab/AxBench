CC			:= g++
LD			:= g++

include ../config.mk

CFLAGS		:= -Wall -lfann -lboost_regex -std=c++11
LFLAGS		:= -lfann -lboost_regex -lParrot
HEADERS     := src
INCLUDE 	:= -I${ANALOG_INC} -I${FANN_INC} -I${HEADERS} -I$(PARROT_LIB)
LIB			:= -L${ANALOG_LIB} -L${FANN_LIB} -L$(PARROT_LIB)

MODULE		:= jpeg.nn.out

CPP_FILES := $(wildcard src.nn/*.c)
OBJ_FILES := $(addprefix obj/,$(notdir $(CPP_FILES:.c=.o)))


.PHONY: all clean
	
all: DIR $(MODULE)

DIR:
	@echo ${CPP_FILES}
	@echo ${OBJ_FILES}
	if [ ! -d "./bin" ];then 	\
		mkdir bin;				\
	fi
	if [ ! -d "./obj" ];then 	\
		mkdir obj;				\
	fi

$(MODULE): $(OBJ_FILES)
	$(LD) $^ $(LIB) $(LFLAGS) -o bin/$@

obj/%.o: src.nn/%.c
	$(CC) $(CFLAGS) $(INCLUDE) -c $< -o $@

clean:
	@rm -rf *.o
	@rm -rf *.d
	@rm -rf *.out
	@rm -rf bin
	@rm -rf obj
